<div class="d-flex justify-content-between flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <h5 class="my-0 mr-md-auto font-weight-normal">Tinder Clone App</h5>
  <div class="d-flex justify-content-end align-item-center">

      <% if account_signed_in? %>
        <nav class="my-2 my-md-0 mr-md-3">
          <%= link_to "Browse", "#", style: "line-height: 35px", class: "p-3 text-dark " %>
          <%= link_to "My Matches", "#", style: "line-height: 35px", class: "p-3 text-dark " %>
          <%= link_to "Settings", "#", style: "line-height: 35px", class: "p-3 text-dark " %>
        </nav>
          <%= link_to "Sign out", destroy_account_session_path, method: :delete, class:  "btn btn-secondary mr-2" %>

      <% else %>
          <nav class="my-2 my-md-0 mr-md-3">
            <a class="p-3 text-dark" style="line-height: 35px" href="#">Features</a>
            <a class="p-3 text-dark" style="line-height: 35px" href="#">Enterprise</a>
            <a class="p-3 text-dark" style="line-height: 35px" href="#">Support</a>
            <a class="p-3 text-dark" style="line-height: 35px" href="#">Pricing</a>
          </nav>
            <%= link_to "Sign in", new_account_session_path, class: "btn btn-secondary mr-2" %>
            <%= link_to "Sign up", new_account_registration_path, class: "btn btn-outline-primary mr-2"%>
        <% end %>
  </div>
</div>

